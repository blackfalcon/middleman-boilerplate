  %head
    %meta{ :charset => "utf-8" }/
    %meta{ "http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1" }/
    %meta{ :name => "robots", :content => "index, follow" }/
    %meta{ :name => "keywords", :content => "" }/
    %meta{ :name => "description", :content => "" }/
    %meta{ :name => "viewport", :content => "width=device-width, maximum-scale=1.0" }/
    = stylesheet_link_tag "screen.css?v=#{Time.now.to_i}"

    %title= data.page.title || "Company Name"

    = javascript_include_tag "vendor/modernizr-2.5.3.min"
    = javascript_include_tag "http://www.google.com/jsapi"
      
    :javascript
      google.load("webfont", "1.0.19");

    %script{ :type => "text/javascript"}
      = "WebFont.load({ google: { families: [ 'Quicksand:300,400,700:latin' ] }});"


  %body{ :class => page_classes }
    = partial "shared/browser-warning"
    = partial "shared/header"
    
    .container
      .row
        = partial("shared/breadcrumbs")
      .row
        .span3
          = partial("shared/nav")
        .span9
          = yield

    = partial "shared/footer"

    = javascript_include_tag "application"
    = partial("shared/google-analytics", :locals => { :id => "UA-XXXXXXXX-X" })